<!-- TFT Main Game UI - 1920x1080 Layout -->
<engine:UXML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:engine="UnityEngine.UIElements" xmlns:editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <Style src="project://database/Assets/UI/Styles/TFTMainUI.uss" />
    
    <!-- Main Game Container - Full Screen -->
    <engine:VisualElement name="tft-main-container" class="tft-main-container">
        
        <!-- Top Bar - Player Info & Round Status -->
        <engine:VisualElement name="top-bar" class="top-bar">
            <!-- Left Side - Player Avatar & Stats -->
            <engine:VisualElement name="player-info-left" class="player-info-section">
                <engine:VisualElement name="player-avatar" class="player-avatar">
                    <engine:VisualElement name="avatar-image" class="avatar-image" />
                    <engine:Label name="player-name" text="Người Chơi" class="player-name" />
                </engine:VisualElement>
                <engine:VisualElement name="player-stats" class="player-stats">
                    <engine:VisualElement class="stat-item">
                        <engine:Label text="❤️" class="stat-icon" />
                        <engine:Label name="health-value" text="100" class="stat-value health-stat" />
                    </engine:VisualElement>
                    <engine:VisualElement class="stat-item">
                        <engine:Label text="⭐" class="stat-icon" />
                        <engine:Label name="level-value" text="1" class="stat-value level-stat" />
                    </engine:VisualElement>
                    <engine:VisualElement class="stat-item">
                        <engine:Label text="💰" class="stat-icon" />
                        <engine:Label name="gold-value" text="10" class="stat-value gold-stat" />
                    </engine:VisualElement>
                </engine:VisualElement>
            </engine:VisualElement>
            
            <!-- Center - Round Info & Timer -->
            <engine:VisualElement name="round-info" class="round-info">
                <engine:Label name="round-label" text="Hiệp 1-1" class="round-label" />
                <engine:Label name="phase-label" text="Chuẩn Bị" class="phase-label" />
                <engine:VisualElement name="timer-container" class="timer-container">
                    <engine:Label name="timer-value" text="30" class="timer-value" />
                    <engine:VisualElement name="timer-bar" class="timer-bar">
                        <engine:VisualElement name="timer-fill" class="timer-fill" />
                    </engine:VisualElement>
                </engine:VisualElement>
            </engine:VisualElement>
            
            <!-- Right Side - Game Controls & Settings -->
            <engine:VisualElement name="game-controls" class="game-controls">
                <engine:Button name="settings-btn" text="⚙️" class="control-btn settings-btn" />
                <engine:Button name="surrender-btn" text="🏳️" class="control-btn surrender-btn" />
                <engine:Button name="exit-btn" text="❌" class="control-btn exit-btn" />
            </engine:VisualElement>
        </engine:VisualElement>
        
        <!-- Main Game Area -->
        <engine:VisualElement name="game-area" class="game-area">
            
            <!-- Left Panel - Trait Synergies & Match History -->
            <engine:VisualElement name="left-panel" class="side-panel left-panel">
                
                <!-- Active Synergies -->
                <engine:VisualElement name="synergies-panel" class="panel synergies-panel">
                    <engine:Label text="🏆 Hiệu Ứng Tộc/Nghề" class="panel-title" />
                    <engine:ScrollView name="synergies-scroll" class="synergies-scroll">
                        <!-- Synergy items will be added dynamically -->
                        <engine:VisualElement name="synergy-item-template" class="synergy-item hidden">
                            <engine:VisualElement name="synergy-icon" class="synergy-icon" />
                            <engine:Label name="synergy-name" text="Chiến Binh" class="synergy-name" />
                            <engine:Label name="synergy-count" text="2/4" class="synergy-count" />
                            <engine:Label name="synergy-description" text="Tăng 15% giáp" class="synergy-description" />
                        </engine:VisualElement>
                    </engine:ScrollView>
                </engine:VisualElement>
                
                <!-- Match History -->
                <engine:VisualElement name="match-history" class="panel match-history">
                    <engine:Label text="📊 Lịch Sử Đấu" class="panel-title" />
                    <engine:ScrollView name="history-scroll" class="history-scroll">
                        <!-- Match results will be added dynamically -->
                    </engine:ScrollView>
                </engine:VisualElement>
                
            </engine:VisualElement>
            
            <!-- Center - Battle Board -->
            <engine:VisualElement name="board-container" class="board-container">
                
                <!-- Battle Board Grid -->
                <engine:VisualElement name="battle-board" class="battle-board">
                    <!-- 7x4 hex grid for battle board -->
                    <!-- Hex tiles will be generated dynamically -->
                </engine:VisualElement>
                
                <!-- Player Bench -->
                <engine:VisualElement name="bench-container" class="bench-container">
                    <engine:Label text="💺 Băng Ghế Dự Bị" class="bench-label" />
                    <engine:VisualElement name="bench-slots" class="bench-slots">
                        <!-- 9 bench slots -->
                        <engine:VisualElement name="bench-slot-1" class="bench-slot">
                            <engine:VisualElement name="bench-champion" class="bench-champion" />
                        </engine:VisualElement>
                        <engine:VisualElement name="bench-slot-2" class="bench-slot">
                            <engine:VisualElement name="bench-champion" class="bench-champion" />
                        </engine:VisualElement>
                        <engine:VisualElement name="bench-slot-3" class="bench-slot">
                            <engine:VisualElement name="bench-champion" class="bench-champion" />
                        </engine:VisualElement>
                        <engine:VisualElement name="bench-slot-4" class="bench-slot">
                            <engine:VisualElement name="bench-champion" class="bench-champion" />
                        </engine:VisualElement>
                        <engine:VisualElement name="bench-slot-5" class="bench-slot">
                            <engine:VisualElement name="bench-champion" class="bench-champion" />
                        </engine:VisualElement>
                        <engine:VisualElement name="bench-slot-6" class="bench-slot">
                            <engine:VisualElement name="bench-champion" class="bench-champion" />
                        </engine:VisualElement>
                        <engine:VisualElement name="bench-slot-7" class="bench-slot">
                            <engine:VisualElement name="bench-champion" class="bench-champion" />
                        </engine:VisualElement>
                        <engine:VisualElement name="bench-slot-8" class="bench-slot">
                            <engine:VisualElement name="bench-champion" class="bench-champion" />
                        </engine:VisualElement>
                        <engine:VisualElement name="bench-slot-9" class="bench-slot">
                            <engine:VisualElement name="bench-champion" class="bench-champion" />
                        </engine:VisualElement>
                    </engine:VisualElement>
                </engine:VisualElement>
                
            </engine:VisualElement>
            
            <!-- Right Panel - Items & Enemy Board Preview -->
            <engine:VisualElement name="right-panel" class="side-panel right-panel">
                
                <!-- Item Forge -->
                <engine:VisualElement name="items-panel" class="panel items-panel">
                    <engine:Label text="⚔️ Rồng Luyện Đồ" class="panel-title" />
                    <engine:VisualElement name="item-components" class="item-components">
                        <!-- Item component slots -->
                        <engine:VisualElement name="component-slot-1" class="component-slot">
                            <engine:VisualElement name="component-item" class="component-item" />
                        </engine:VisualElement>
                        <engine:VisualElement name="component-slot-2" class="component-slot">
                            <engine:VisualElement name="component-item" class="component-item" />
                        </engine:VisualElement>
                    </engine:VisualElement>
                    <engine:ScrollView name="completed-items" class="completed-items">
                        <!-- Completed items will be listed here -->
                    </engine:ScrollView>
                </engine:VisualElement>
                
                <!-- Enemy Preview -->
                <engine:VisualElement name="enemy-preview" class="panel enemy-preview">
                    <engine:Label text="🎯 Đối Thủ Tiếp Theo" class="panel-title" />
                    <engine:VisualElement name="enemy-info" class="enemy-info">
                        <engine:VisualElement name="enemy-avatar" class="enemy-avatar" />
                        <engine:Label name="enemy-name" text="Đối Thủ" class="enemy-name" />
                        <engine:Label name="enemy-health" text="❤️ 85" class="enemy-health" />
                    </engine:VisualElement>
                    <engine:VisualElement name="enemy-board-mini" class="enemy-board-mini">
                        <!-- Mini representation of enemy board -->
                    </engine:VisualElement>
                </engine:VisualElement>
                
            </engine:VisualElement>
            
        </engine:VisualElement>
        
        <!-- Bottom UI - Shop & Experience -->
        <engine:VisualElement name="bottom-ui" class="bottom-ui">
            
            <!-- Experience Bar -->
            <engine:VisualElement name="experience-section" class="experience-section">
                <engine:Label name="exp-label" text="🎓 Kinh Nghiệm:" class="exp-label" />
                <engine:VisualElement name="exp-bar-container" class="exp-bar-container">
                    <engine:VisualElement name="exp-bar-background" class="exp-bar-background">
                        <engine:VisualElement name="exp-bar-fill" class="exp-bar-fill" />
                    </engine:VisualElement>
                    <engine:Label name="exp-text" text="4/8" class="exp-text" />
                </engine:VisualElement>
                <engine:Button name="buy-exp-btn" text="🎓 Mua KN (4💰)" class="buy-exp-btn" />
            </engine:VisualElement>
            
            <!-- Shop Section -->
            <engine:VisualElement name="shop-section" class="shop-section">
                
                <!-- Shop Controls -->
                <engine:VisualElement name="shop-controls" class="shop-controls">
                    <engine:Button name="refresh-btn" text="🔄 Làm Mới (2💰)" class="shop-btn refresh-btn" />
                    <engine:Button name="lock-btn" text="🔒 Khóa" class="shop-btn lock-btn" />
                    <engine:VisualElement name="shop-info" class="shop-info">
                        <engine:Label name="shop-level" text="Cấp 1" class="shop-level" />
                        <engine:Label name="shop-odds" text="100% | 0% | 0% | 0% | 0%" class="shop-odds" />
                    </engine:VisualElement>
                    <engine:Button name="all-in-btn" text="🎰 All-In" class="shop-btn all-in-btn" />
                </engine:VisualElement>
                
                <!-- Champion Shop -->
                <engine:VisualElement name="champion-shop" class="champion-shop">
                    <engine:VisualElement name="shop-slot-1" class="shop-slot">
                        <engine:VisualElement name="shop-champion" class="shop-champion">
                            <engine:VisualElement name="champion-portrait" class="champion-portrait" />
                            <engine:Label name="champion-name" text="Chiến Binh" class="champion-name" />
                            <engine:Label name="champion-cost" text="1💰" class="champion-cost" />
                            <engine:VisualElement name="champion-traits" class="champion-traits">
                                <engine:VisualElement name="trait-icon-1" class="trait-icon" />
                                <engine:VisualElement name="trait-icon-2" class="trait-icon" />
                            </engine:VisualElement>
                        </engine:VisualElement>
                    </engine:VisualElement>
                    
                    <engine:VisualElement name="shop-slot-2" class="shop-slot">
                        <engine:VisualElement name="shop-champion" class="shop-champion">
                            <engine:VisualElement name="champion-portrait" class="champion-portrait" />
                            <engine:Label name="champion-name" text="Cung Thủ" class="champion-name" />
                            <engine:Label name="champion-cost" text="1💰" class="champion-cost" />
                            <engine:VisualElement name="champion-traits" class="champion-traits">
                                <engine:VisualElement name="trait-icon-1" class="trait-icon" />
                                <engine:VisualElement name="trait-icon-2" class="trait-icon" />
                            </engine:VisualElement>
                        </engine:VisualElement>
                    </engine:VisualElement>
                    
                    <engine:VisualElement name="shop-slot-3" class="shop-slot">
                        <engine:VisualElement name="shop-champion" class="shop-champion">
                            <engine:VisualElement name="champion-portrait" class="champion-portrait" />
                            <engine:Label name="champion-name" text="Hiệp Sĩ" class="champion-name" />
                            <engine:Label name="champion-cost" text="2💰" class="champion-cost" />
                            <engine:VisualElement name="champion-traits" class="champion-traits">
                                <engine:VisualElement name="trait-icon-1" class="trait-icon" />
                                <engine:VisualElement name="trait-icon-2" class="trait-icon" />
                            </engine:VisualElement>
                        </engine:VisualElement>
                    </engine:VisualElement>
                    
                    <engine:VisualElement name="shop-slot-4" class="shop-slot">
                        <engine:VisualElement name="shop-champion" class="shop-champion">
                            <engine:VisualElement name="champion-portrait" class="champion-portrait" />
                            <engine:Label name="champion-name" text="Pháp Sư" class="champion-name" />
                            <engine:Label name="champion-cost" text="1💰" class="champion-cost" />
                            <engine:VisualElement name="champion-traits" class="champion-traits">
                                <engine:VisualElement name="trait-icon-1" class="trait-icon" />
                                <engine:VisualElement name="trait-icon-2" class="trait-icon" />
                            </engine:VisualElement>
                        </engine:VisualElement>
                    </engine:VisualElement>
                    
                    <engine:VisualElement name="shop-slot-5" class="shop-slot">
                        <engine:VisualElement name="shop-champion" class="shop-champion">
                            <engine:VisualElement name="champion-portrait" class="champion-portrait" />
                            <engine:Label name="champion-name" text="Thánh Kỵ Sĩ" class="champion-name" />
                            <engine:Label name="champion-cost" text="3💰" class="champion-cost" />
                            <engine:VisualElement name="champion-traits" class="champion-traits">
                                <engine:VisualElement name="trait-icon-1" class="trait-icon" />
                                <engine:VisualElement name="trait-icon-2" class="trait-icon" />
                            </engine:VisualElement>
                        </engine:VisualElement>
                    </engine:VisualElement>
                </engine:VisualElement>
                
            </engine:VisualElement>
            
        </engine:VisualElement>
        
    </engine:VisualElement>
    
    <!-- Overlay Panels -->
    
    <!-- Champion Tooltip -->
    <engine:VisualElement name="champion-tooltip" class="tooltip champion-tooltip hidden">
        <engine:VisualElement name="tooltip-header" class="tooltip-header">
            <engine:VisualElement name="tooltip-portrait" class="tooltip-portrait" />
            <engine:VisualElement name="tooltip-info" class="tooltip-info">
                <engine:Label name="tooltip-name" text="Tên Tướng" class="tooltip-name" />
                <engine:Label name="tooltip-cost" text="Giá: 3💰" class="tooltip-cost" />
                <engine:VisualElement name="tooltip-traits" class="tooltip-traits" />
            </engine:VisualElement>
        </engine:VisualElement>
        <engine:VisualElement name="tooltip-stats" class="tooltip-stats">
            <engine:Label name="tooltip-hp" text="❤️ 550" class="tooltip-stat" />
            <engine:Label name="tooltip-ad" text="⚔️ 45" class="tooltip-stat" />
            <engine:Label name="tooltip-armor" text="🛡️ 20" class="tooltip-stat" />
            <engine:Label name="tooltip-mr" text="🔮 20" class="tooltip-stat" />
        </engine:VisualElement>
        <engine:VisualElement name="tooltip-ability" class="tooltip-ability">
            <engine:Label name="ability-name" text="Tên Skill" class="ability-name" />
            <engine:Label name="ability-description" text="Mô tả skill..." class="ability-description" />
        </engine:VisualElement>
    </engine:VisualElement>
    
    <!-- Item Tooltip -->
    <engine:VisualElement name="item-tooltip" class="tooltip item-tooltip hidden">
        <engine:VisualElement name="item-tooltip-header" class="tooltip-header">
            <engine:VisualElement name="item-tooltip-icon" class="tooltip-icon" />
            <engine:Label name="item-tooltip-name" text="Tên Item" class="tooltip-name" />
        </engine:VisualElement>
        <engine:Label name="item-tooltip-description" text="Mô tả item..." class="tooltip-description" />
        <engine:VisualElement name="item-tooltip-components" class="tooltip-components">
            <engine:Label text="Công thức:" class="components-label" />
            <engine:VisualElement name="components-list" class="components-list" />
        </engine:VisualElement>
    </engine:VisualElement>
    
    <!-- Settings Panel -->
    <engine:VisualElement name="settings-panel" class="overlay-panel settings-panel hidden">
        <engine:VisualElement name="settings-content" class="panel-content">
            <engine:Label text="⚙️ Cài Đặt" class="panel-title" />
            
            <!-- Audio Settings -->
            <engine:VisualElement name="audio-settings" class="settings-group">
                <engine:Label text="🔊 Âm Thanh" class="settings-group-title" />
                <engine:VisualElement name="volume-sliders" class="volume-sliders">
                    <engine:VisualElement class="slider-row">
                        <engine:Label text="Nhạc nền:" class="slider-label" />
                        <engine:Slider name="music-volume" low-value="0" high-value="100" value="80" class="volume-slider" />
                    </engine:VisualElement>
                    <engine:VisualElement class="slider-row">
                        <engine:Label text="Hiệu ứng:" class="slider-label" />
                        <engine:Slider name="sfx-volume" low-value="0" high-value="100" value="80" class="volume-slider" />
                    </engine:VisualElement>
                </engine:VisualElement>
            </engine:VisualElement>
            
            <!-- Graphics Settings -->
            <engine:VisualElement name="graphics-settings" class="settings-group">
                <engine:Label text="🎨 Đồ Họa" class="settings-group-title" />
                <engine:VisualElement class="graphics-options">
                    <engine:Toggle name="fullscreen-toggle" text="Toàn màn hình" class="settings-toggle" />
                    <engine:Toggle name="vsync-toggle" text="V-Sync" class="settings-toggle" />
                    <engine:DropdownField name="quality-dropdown" label="Chất lượng:" choices="Thấp,Trung bình,Cao" class="quality-dropdown" />
                </engine:VisualElement>
            </engine:VisualElement>
            
            <!-- Control Settings -->
            <engine:VisualElement name="control-settings" class="settings-group">
                <engine:Label text="🎮 Điều Khiển" class="settings-group-title" />
                <engine:VisualElement class="control-options">
                    <engine:Toggle name="auto-combine-toggle" text="Tự động ghép tướng" class="settings-toggle" />
                    <engine:Toggle name="show-tooltips-toggle" text="Hiện tooltip" class="settings-toggle" />
                    <engine:Toggle name="show-damage-toggle" text="Hiện damage" class="settings-toggle" />
                </engine:VisualElement>
            </engine:VisualElement>
            
            <engine:VisualElement name="settings-buttons" class="settings-buttons">
                <engine:Button name="apply-settings-btn" text="Áp dụng" class="settings-btn apply-btn" />
                <engine:Button name="close-settings-btn" text="Đóng" class="settings-btn close-btn" />
            </engine:VisualElement>
        </engine:VisualElement>
    </engine:VisualElement>
    
</engine:UXML>
